<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:padding="4dp" />

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/imageView"
                android:layout_marginStart="149dp"
                android:textSize="25sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/textViewDesignation"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textViewSession"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/contact"
                android:layout_alignStart="@+id/textViewName"
                android:paddingBottom="10dp"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/contact"
                android:layout_width="35dp"
                android:layout_height="31dp"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="65dp"
                app:srcCompat="@drawable/contact_bottomnav" />

            <ImageView
                android:id="@+id/linkedin"
                android:layout_width="38dp"
                android:layout_height="31dp"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="11dp"
                app:srcCompat="@drawable/linkedin" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>